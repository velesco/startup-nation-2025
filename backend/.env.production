# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/startup-nation-2025
MONGODB_USER=startup_prod_user
MONGODB_PASSWORD=replace_with_strong_password

# JWT Configuration
JWT_SECRET=replace_with_strong_random_string
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=replace_with_different_strong_random_string
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for sending notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@aplica-startup.ro
EMAIL_PASSWORD=replace_with_app_password
EMAIL_FROM=Startup Nation 2025 <noreply@aplica-startup.ro>

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10 # in MB

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=14

# Security
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# Logs
LOG_LEVEL=error

# Domain Configuration
DOMAIN_URL=https://aplica-startup.ro
API_PREFIX=/api
CORS_ORIGIN=https://aplica-startup.ro
