# Server configuration
PORT=5003
NODE_ENV=development

# Database configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/startup-nation-2025
MONGODB_URI_TEST=mongodb+srv://username:password@cluster0.mongodb.net/startup-nation-2025-test

# JWT configuration
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-jwt-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d

# CORS settings
FRONTEND_URL=http://localhost:3000
SECONDARY_FRONTEND_URL=

# Email configuration for contract emails and password resets
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Backup configuration
BACKUP_ENABLED=false
