# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URLs
FRONTEND_URL=http://localhost:3000
SECONDARY_FRONTEND_URL=

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/startup-nation-2025
MONGODB_USER=
MONGODB_PASSWORD=

# JWT Configuration
JWT_SECRET=use_a_strong_random_string_at_least_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=use_a_different_strong_random_string_for_refresh_token
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for sending notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Startup Nation 2025 <noreply@yourdomain.com>

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10 # in MB

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# Security
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# Logs
LOG_LEVEL=info
